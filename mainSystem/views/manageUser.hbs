<div class="container mb-4">
    <h2 class="my-4">List Users</h2>
</div>
<div class="container mb-4" style="max-height: 800px; overflow-y:hidden">
    <div class="row mb-5">
        <div class="site-blocks-table">
            <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Username</th>
                    <th>Phone</th>
                    {{!-- <th>Balance</th> --}}
                </tr>
            </thead>
            <tbody>
                {{#each users}}
                    <tr>
                        <td>{{this.user.id}}</td>
                        <td>{{this.user.firstname}}</td>
                        <td>{{this.user.lastname}}</td>
                        <td>{{this.user.email}}</td>
                        <td>{{this.user.username}}</td>
                        <td>{{this.user.phone}}</td>
                        {{!-- <td>{{this.balance}}</td> --}}
                    </tr>
                {{/each}}
            </tbody>
            </table>
        </div>

    </div>

</div>