<div class="container">
    
    <h2 class="mt-3 mb-3">List Users</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Username</th>
                <th>Phone</th>
                {{!-- <th>Balance</th> --}}
            </tr>
        </thead>
        <tbody>
            {{#each users}}
                <tr>
                    <td>{{this.user.id}}</td>
                    <td>{{this.user.firstname}}</td>
                    <td>{{this.user.lastname}}</td>
                    <td>{{this.user.email}}</td>
                    <td>{{this.user.username}}</td>
                    <td>{{this.user.phone}}</td>
                    {{!-- <td>{{this.balance}}</td> --}}
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>