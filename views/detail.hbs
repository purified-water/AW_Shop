<div class="container">
  <div class="detail-section">
    <h1 class="detail-name">{{productDetail.name}}</h1>
    <hr class="section-divider" />
  </div>

  <div class="detail-section">
    <div class="detail-info row">
      <div class="detail-img col-md-4 ms-3">
        <img src="{{productDetail.image_link}}" alt="IMG" class="detail-img" />
      </div>
      <div class="col-md-6 ms-2">

        <span class="detail-text">Category:</span>
        <span class="detail-description">{{productDetail.product_type}}</span>
        {{!-- <p class="detail-text">Category: {{productDetail.product_type}}</p> --}}
        <br />
        <span class="detail-text">Brand:</span>
        <span class="detail-description">{{productDetail.brand}}</span>
        <br />
        <span class="detail-text">Price:</span>
        <span
          class="detail-description"
        >{{productDetail.price}}{{productDetail.price_sign}}</span>
        <br />
        <span class="detail-text">Tag: </span>
        {{#each productDetail.tag_list}}
          <span class="detail-description">{{this}}</span>
        {{/each}}
        <br />
        <form action="/cart/add?id={{productDetail.id}}" method="post">
          <p class="detail-text">Quantity</p>

          <input
            type="number"
            class="input--style-3"
            placeholder="1"
            name="quantity"
            value="1"
          />
          <button type="submit" class="detail-button mt-2 mb-3">Add to cart</button>
        </form>
      </div>

    </div>
    <hr class="section-divider" />
  </div>

  <div class="detail-section">
    <p class="detail-text">
      Description
    </p>
    <p class="detail-description">
      {{productDetail.description}}
    </p>
    <hr class="section-divider" />
  </div>
</div>