<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your Page Title</title>
  <!-- Include jQuery library from CDN -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.7.7/handlebars.min.js"></script>
</head>

<body>

  <div class="container">
    <h3>DANH Má»¤C CATEGORY</h3>
    <div class="site-section mt-5">
      <div class="container">
        <div class="row" id="data-container">
          <!-- Data will be dynamically loaded here -->
        </div>
        <div class="row">
          <div class="col-lg-12">
            <div id="pagination-container">
              <a href="#" id="prev-page">Previous</a>
              <!-- Pagination links will be dynamically loaded here -->
              <a href="#" id="next-page">Next</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Assuming you have a Handlebars template in your HTML -->
  <script id="data-template" type="text/x-handlebars-template">
  {{#each data}}
    <p>{{this.column_name}}</p>
  {{/each}}
</script>

  <script>
    $(document).ready(function () {
      var currentPage = 1;
      var totalPages = 1;

      function loadData(page) {
        $.ajax({
          url: '/cate?page='+page,
          type: 'GET',
          data: { page: page },
          success: function (data) {
            // Assuming data is an array of objects
            console.log(data)
            renderData(data);
          },
          error: function (error) {
            console.error('Error fetching data:', error);
          }
        });
      }

      function renderData(data) {
        // Get the Handlebars template script
        var source = $('#data-template').html();
        // Compile the template 
        var template = Handlebars.compile(source);
        // Insert the rendered HTML into the container
        $('#data-container').html(template({ data: data }));
      }

      function loadPagination() {
        $.ajax({
          url: '/cate',
          type: 'GET',
          success: function (result) {
            const totalItems = result.totalItems;
            totalPages = Math.ceil(totalItems / 5);

            $('#pagination-container').empty();
            $('#pagination-container').append('<a href="#" id="prev-page">Previous</a>');

            for (let i = 1; i <= totalPages; i++) {
              $('#pagination-container').append('<a href="#" data-page="' + i + '">' + i + '</a>');
            }

            $('#pagination-container').append('<a href="#" id="next-page">Next</a>');
            updatePaginationButtons();
          },
          error: function (error) {
            console.error('Error fetching pagination data:', error);
          }
        });
      }

      function updatePaginationButtons() {
        $('#prev-page').prop('disabled', currentPage === 1);
        $('#next-page').prop('disabled', currentPage === totalPages);
      }

      function navigateToPage(page) {
        currentPage = page;
        loadData(currentPage);
        updatePaginationButtons();
      }

      $(document).on('click', '#pagination-container a[data-page]', function (e) {
        e.preventDefault();
        var page = parseInt($(this).data('page'));
        navigateToPage(page);
      });

      $(document).on('click', '#prev-page', function (e) {
        e.preventDefault();
        if (currentPage > 1) {
          navigateToPage(currentPage - 1);
        }
      });

      $(document).on('click', '#next-page', function (e) {
        e.preventDefault();
        if (currentPage < totalPages) {
          navigateToPage(currentPage + 1);
        }
      });

      // Initial load
      loadPagination();
      updatePaginationButtons();
    });
  </script>
</body>

</html>