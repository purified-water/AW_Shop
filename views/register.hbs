<div class="page-wrapper bg-gra-01 p-t-180 p-b-100 font-poppins">
  <div class="wrapper wrapper--w780">
    <div class="card card-3">
      <div class="card-heading"></div>
      <div class="card-body">
        <div class="title"><a href="">CREATE AN ACCOUNT</a> </div>

        <div class="form">
          {{#if hasErrors}}
            <div class="alert alert-danger">
              {{#each messages}}
                <p>{{this}}</p>
              {{/each}}
            </div>
          {{/if}}

          <form action="/register" method="post">
            <div class="input-group">
              <input
                class="input--style-3"
                type="text"
                name="username"
                placeholder="Username"
              />
            </div>

            <div class="input-group">
              <input
                class="input--style-3"
                type="text"
                name="firstname"
                placeholder="First name"
              />
            </div>
            <div class="input-group">
              <input
                class="input--style-3"
                type="text"
                name="lastname"
                placeholder="Last name"
              />
            </div>
            <div class="input-group">
              <input
                class="input--style-3"
                type="email"
                name="email"
                placeholder="Email"
              />
            </div>
            <div class="input-group">
              <input
                class="input--style-3"
                type="text"
                name="phone"
                placeholder="Phone number"
              />
            </div>
            <div class="input-group">
              <input
                class="input--style-3"
                type="password"
                name="password"
                placeholder="Password"
              />
            </div>

            {{! <div class="input-group">
                            <input class="input--style-3" type="text" name="phone" placeholder="Phone" >
                        </div> }}
            <input type="hidden" name="_csrf" value="{{csrfToken}}" />
            <div class="p-t-10">
              <button
                class="btn btn--pill btn--green"
                type="submit"
              >Register</button>
            </div>
          </form>
        </div>
        <br />
        <div>
          <h6 style="color: white">Alread have an account?
            <a href="/login" style="color: white"> Log in here </a></h6>
        </div>
      </div>
    </div>
  </div>
</div>